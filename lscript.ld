MEMORY
{
    /* Секція для коду програми (тільки читання та виконання) */
    FLASH ( rx ) : ORIGIN = 0x08000000, LENGTH = 1M
    
    /* Секція для даних та стеку (читання, запис, виконання) */
    RAM ( rxw ) : ORIGIN = 0x20000000, LENGTH = 128K
}

/* Визначаємо початкову адресу стеку як кінець оперативної пам'яті */
__stack_start = ORIGIN(RAM) + LENGTH(RAM);
